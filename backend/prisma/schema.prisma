

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board{
  id Int @id @default(autoincrement())
  image_url String
  title String
  category String
  author String?
  cards Card[]
}

model Card{
  id Int @id @default(autoincrement())
  image_url String
  message String
  author String
  board Board @relation(fields:[boardID], references:[id])
  boardID Int
  likeCount Int
  comments Comment[]
}

model Comment{
  id  Int  @id @default(autoincrement())
  message String
  card     Card   @relation(fields:[cardId], references:[id])
  cardId   Int
}
